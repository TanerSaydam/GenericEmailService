<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Generic Email Service</Title>
    <Version>1.0.3</Version>
    <Authors>Taner Saydam</Authors>
    <Company>Taner Saydam</Company>
    <Description>This nuget package have an Service for Send Email.</Description>
    <Copyright>Copyright 2023</Copyright>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/TanerSaydam/GenericEmailService</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>emailservice</PackageTags>
    <PackageIcon>mail-icon.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MailKit" Version="4.1.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="mail-icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
